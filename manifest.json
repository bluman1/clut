{
    "manifest_version": 3,
    "name": "CLUT",
    "description": "Cycle through last used Chrome tabs using keyboard shortcut (MRU style).",
    "version": "1.0",
    "permissions": [
      "tabs",
      "storage"
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "alt_switch_fast": {
        "suggested_key": {
          "default": "Alt+W",
          "mac": "Alt+W"
        },
        "description": "Quick switch - Use to switch quickly among last 2 to 4 tabs."
      },
      "alt_switch_slow_backward": {
        "suggested_key": {
          "default": "Alt+S",
          "mac": "Alt+S"
        },
        "description": "Normal switch backward."
      },
      "alt_switch_slow_forward": {
        "suggested_key": {
          "default": "Alt+Shift+S",
          "mac": "Alt+Shift+S"
        },
        "description": "Normal switch forward."
      }
    }
  }
  